    {
        "*": {
            "Magento_Ui/js/core/app": {
                "components": {
                    "searchScriptUi": {
                        "component": "searchScriptUi",
                        "options": {
                            "searchTermCount": 1,
                            "selectors": {
                                "termCountInput": "input#searchTerm",
                                "searchInput": "input#filter",
                                "productsList": "ol.products.list.items.product-items",
                                "products": "li.item.product.product-item",
