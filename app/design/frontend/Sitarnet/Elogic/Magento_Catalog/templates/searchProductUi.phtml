<div id="searchTerm" class="search">
    <input data-bind="scope:'searchScriptUi'"
           type="text"
           name="term"
           id="term"
           placeholder="Enter Your Count..."
    />
</div>
</br>
<div id="search" class="search">
    <input data-bind="scope:'searchScriptUi'"
           type="text"
           name="filter"
           id="filter"
           placeholder="Enter Your Search..."
    />
</div>

