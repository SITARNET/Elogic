<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/favorite-products" method="GET">
        <service class="Elogic\FavoriteProducts\Api\FavoriteProductsViewInterface" method="getSkus"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/favorite-products/:sku" method="POST">
        <service class="Elogic\FavoriteProducts\Api\FavoriteProductsViewInterface" method="addBySku"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/favorite-products/:sku" method="DELETE">
        <service class="Elogic\FavoriteProducts\Api\FavoriteProductsViewInterface" method="removeBySku"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
